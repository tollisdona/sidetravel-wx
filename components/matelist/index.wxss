/* components/matelist/index.wxss */
.area{
  display: flex;
  flex-direction: column;
  padding: 5rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.area > view{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.row .info{
  flex: 1;
  display: flex;
  flex-direction: row;
  padding:10rpx 0rpx;
  margin-left: 20rpx;
  border-bottom:1px solid #CCCCCC;
}
.info .title{
  color:grey;
  margin-right: 20rpx;
}
.des{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  white-space: nowrap;
}
image{
  width:40rpx;
  height:40rpx;
}
.foot view{
  margin-left: 20rpx;
}

.avatar{
  border-radius: 40rpx;
}
.gender image{
  width: 20rpx;
  height: 10rpx;
}
.gender{
  padding:6rpx 15rpx;
  border-radius: 15rpx;
}
.male{
  background-color: #B4D2FF;
}
.female{
  background-color: #FFD1E3;
}
.posttime{
  color:grey;
}

