.overlay{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-color:gainsboro;
  /* background-color: white; */
  /* box-shadow: 0px -2px 8px rgba(0,0,0,0.2); */
  z-index: 1001;
  opacity: 0.7;
  filter:blur(opacity=70);
}
.input-area{
  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  box-shadow: 0px -2px 8px rgba(0,0,0,0.2);
}
.parent{
  border-bottom: 1px solid #ccc;
}
.comment {
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.child-comment {
  margin-left: 20px;
}
.wrap{
  display: flex;
  align-items: flex-start;
  align-content: flex-start;
  margin-bottom: 10px;
}

.wrap .avatar{
  width: 35px;
  height: 35px;
  border-radius: 20px;
  /* float: left; */
  margin-right: 10px;
}

.wrap .comment-details {
  flex: 1;
}

.username {
  font-weight: bold;
}

.comment-text {
  margin-top: 5px;
  color: #333;
}

.comment-time {
  color: #999;
  font-size: 12px;
  margin-top: 5px;
}
  