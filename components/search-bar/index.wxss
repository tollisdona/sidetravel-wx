/* components/search-bar/index.wxss */
.search-bar-wrap{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.search-bar{
  display: flex;
  flex:1;
  flex-direction: row;
  /* align-items: center; */
  /* justify-content: center; */
  background-color: #F8F8F8;
  border:lightgray solid 1px ;
  margin:5rpx 15rpx;
  border-radius: 25rpx;
}
.icon-wrap > image{
  width: 50rpx;
  height: 50rpx;
}

.icon-wrap{
  margin: 2rpx;
}

.search-input{
  flex:1;
  display: flex;
  flex-direction: row;
}


.search-input > input{
  /* 使光标居中 */
  height: 30rpx; 
  padding-top:5rpx;
  margin: 2rpx;
  flex:1;
  align-items: center;
  justify-self: center;
}
.search-input > .close-wrap{
  margin-top: 3rpx;
  margin-right: 3rpx;
}
.close-wrap > image{
  width:45rpx;
  height: 45rpx;
}
.cancel{ 
  padding-right: 5rpx;
  margin-right: 10rpx;
}
