.card {
  border-radius: 5px;
  overflow: hidden;
  flex-shrink: 0;
  width: 100%;
  background-color: white;
}

.card_wrap {
  position: absolute;
  transform-origin: 0 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.card_img {
  width: 100%; 
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}

.card_content {
  padding: 8px;
  font-size: 15px;
  font-weight: 600;
}
.card_content span{
  white-space: nowrap;
  overflow : hidden;
  text-overflow: ellipsis;
}
.card_time {
  padding: 0px 8px;
  font-size: 14px;
  color: #666666;
}

.card_footer {
  padding: 0px 8px 4px;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #666666;
  line-height: 20px;
}

.card_avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
}
.card_li {
  width: 20px;
  height: 20px;
}
.card_nickname {
  flex: 1;
  padding-left: 2px;
}
