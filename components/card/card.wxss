.card {
  border-radius: 5px;
  overflow: hidden;
  flex-shrink: 0;
  width: 100%;
  background-color: white;
}

.card_wrap {
  position: absolute;
  transform-origin: 0 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.card_img {
  width: 100%; 
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}

.card_content {
  padding: 8px;
  font-size: 14px;
  font-weight: 500;
  /* height: 54px; */
  overflow: hidden;
}

.card_footer {
  padding: 0 8px 8px;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #666666;
  line-height: 20px;
}

.card_avatar {
  width: 20px;
  height: 20px;
  border-radius: 50%;
}

.card_nickname {
  flex: 1;
  padding-left: 4px;
}
