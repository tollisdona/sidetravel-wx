/* pages/mateinfo/index.wxss */
.area{
  display: flex;
  flex-direction: column;
  padding: 10rpx 15rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.avatar{
  margin:0rpx 20rpx;
  border: saddlebrown 1px solid;
}
.uinfo{
  display: flex;
  flex-direction: column;
  border: saddlebrown 1px solid;
}  

.r1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}
.r1 .username{
  margin-right: 20rpx;
}

.gender{
  width: 40rpx;
  height: 30rpx;
}


.row .info{
  flex: 1;
  display: flex;
  flex-direction: row;
  padding:10rpx 0rpx;
  margin-left: 20rpx;
  border-bottom:1px solid #CCCCCC;
}
.info .title{
  color:grey;
  margin-right: 20rpx;
}
.des{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  white-space: nowrap;
}




.posttime{
  color:grey;
}


