/* pages/start.wxss */

.container{
    position: fixed;
    background-size: 100% 100%;
    height: 100%;
    width: 100%; 
    background-image: url(https://mms1.baidu.com/it/u=1405710056,3660366231&fm=253&app=138&f=JPEG?w=500&h=888);
}

.content{
    position: relative;
    top: 250rpx;
}

.content{
    font-size: 100rpx;
    font-family: "Angkor",serif;
    font-weight: bolder;
    font-style: normal;    
    /* letter-spacing: 5rpx; */
    color: #fff;
    width: 12rem;
    animation: typingwords 4s steps(7) 1;
    white-space: nowrap;
    overflow: hidden;
    /* border-right: solid 1rpx #fff; */
}
@keyframes typingwords{
  0%{
    width: 0;
  }
}

.login{
    position: absolute;
    animation: run 5s 1;
    animation-fill-mode: forwards;
  }
  @keyframes run{
    0%{
      opacity: 0;
      bottom:0rpx;
  }
  100%{
      opacity:1;
      bottom:350rpx;
  }
  }


