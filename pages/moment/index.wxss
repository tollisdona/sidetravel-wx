/* pages/moment/index.wxss */
.area{
  display: flex;
  flex-direction: column;
  margin-bottom: 5px;
}
.topbar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  font-size: 30rpx;
}
.left{
  margin-left: 50rpx;
  padding:5rpx;
}

.right{
  margin-right:50rpx;
  background-color:violet;
  border-radius: 25px;
  padding:5rpx 20rpx;
}
.content{
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 10rpx;
}
.content textarea{
  width:100%;
  height: 250rpx;
  font-size:35rpx;
}

.media{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: flex-start;
  align-items: flex-start; */
  align-content: flex-start;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 10rpx;
  height: 630rpx;
  /* border: deeppink 1px solid; */
}
.media .item{
  border: 1px grey dashed;
  margin-left: 5rpx;
  margin-bottom: 5rpx;
  width: 205rpx;
  height: 205rpx;
}
.media image{
  width: 205rpx;
  height: 205rpx;
}
.media video{
  width: 205rpx;
  height: 205rpx;
}
.foot{
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
}
.foot view{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.foot image{
  width: 50rpx;
  height: 50rpx;
}
.foot .label{
  color: aquamarine;
}
.foot .position{
  color: blue;
}